@model MyWebApi.Models.SimpleUser

<h1>로그인</h1>
<form class="form-horizontal" method="post" asp-controller="User" asp-action="Login">
    <div class="form-group">
        <label>사용자 ID</label>
        <input type="number" class="form-control" asp-for="Id" placeholder="숫자로 ID 입력!" />
    </div>
    <div class="form-group">
        <label>비밀번호</label>
        <input type="text" class="form-control" asp-for="Password" placeholder="사용자 비밀번호 입력!" />
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">로그인</button>
        <a class="btn btn-warning" href="#">취소</a>
    </div>
</form>
